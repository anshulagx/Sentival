{
  "manifest_version": 2,

  "name": "SENTIVAL",
  "description": "Made by Turing Point",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["update.js"]
    }
  ],
  "browser_action": {
   "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    },
   "default_popup": "popup.html"
  },
  "permissions": ["tabs", "<all_urls>"]
}
